{
  "name": "pokemon-game-mcp",
  "version": "1.0.0",
  "description": "MCP Server for creating PokÃ©mon-style games in RPG Maker MZ with AI-powered creature generation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pokemon-game-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pokemon",
    "rpg-maker",
    "rpg-maker-mz",
    "game-development",
    "ai",
    "gemini",
    "creature-generation",
    "pokemon-essentials"
  ],
  "author": "Stratomai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DoubleN96/pokemon-game-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/DoubleN96/pokemon-game-mcp/issues"
  },
  "homepage": "https://github.com/DoubleN96/pokemon-game-mcp#readme",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
